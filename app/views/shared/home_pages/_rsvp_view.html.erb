<% if HackumassWeb::Application::SLACK_ENABLED %>
  <% if current_user.has_slack? %>
    <div class="row">
      <div class="col-sm-12">
        <div class="card">
          <div class="card-status card-status-left bg-dark"></div>
          <div class="card-body d-flex flex-column">
            <%= render file: HackumassWeb::Application::copy_for('shared/home_pages/rsvp_participant_has_slack') %>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="row">
      <div class="col-sm-12">
        <div class="card">
          <div class="card-status card-status-left bg-purple"></div>
          <div class="card-body d-flex flex-column">
            <%= render file: HackumassWeb::Application::copy_for('shared/home_pages/participant_no_slack') %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

<% if HackumassWeb::Application::DISCORD_ENABLED %>
  <div class="row">
    <div class="col-sm-12">
      <div class="card">
        <div class="card-status card-status-left bg-purple"></div>
        <div class="card-body d-flex flex-column">
          <%= render file: HackumassWeb::Application::copy_for('shared/home_pages/participant_no_discord') %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-sm-12 col-lg-4">
    <div class="card">
      <div class="card-status bg-success"></div>
      <div class="card-header">
        <h3 class="card-title">Check In</h3>
      </div>
      <div class="card-body d-flex flex-column">
        <%= image_tag @qr_image.to_data_url, style: 'height: 300px; width: 300px' %>
        <%= render file: HackumassWeb::Application::copy_for('shared/home_pages/rsvp_participant_check_in') %>
        <form action="/unrsvp" method="post">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
          <input type="submit" value="I cannot attend" class="btn btn-danger"
            data-confirm='Are you sure you cannot attend? By doing this you will be changing your application status from accepted to declined. This is IRREVERSIBLE -- you cannot be marked as accepted again, and you will be unable to come to the event! Are you sure you want to decline your acceptance?' />
        </form>
      </div>
    </div>
  </div>

  <div class="col-sm-12 col-lg-4">
    <%= render file: HackumassWeb::Application::copy_for('shared/home_pages/rsvp_view_traveling') %>
  </div>

  <div class="col-sm-12 col-lg-4">
    <div class="card">
      <div class="card-status bg-blue"></div>
      <div class="card-header">
        <h3 class="card-title">Getting to the Hackathon üö∂‚Äç</h3>
      </div>
      <div class="card-body d-flex flex-column">
        <%= render file: HackumassWeb::Application::copy_for('shared/home_pages/accepted_view_location') %>
      </div>
    </div>
  </div>
</div>