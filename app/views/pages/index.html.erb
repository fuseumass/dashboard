<% if current_user.is_attendee? %>
    <!-- Attendee Stuff-->
    <div class="jumbotron">
      <% if current_user.has_applied? %>
          <h1>Hey, <%= current_user.first_name %> </h1>
          <% if current_user.event_application.application_status == 'accepted' %>
              <% if current_user.event_application.rsvp %>
                  <p>You're all set and ready! You don't need to do anything else other than show up to the event. Please email us at  <a href="mailto:team@hackumass.com ">team@hackumass.com </a> if you have any questions. If for some reason you can't make it, please let us know by pressing the button below.</p>
                  <%= link_to 'I Can not attend anymore', unrsvp_event_applications_path, data: {turbolinks: false}, class: 'btn btn-primary btn-lg' %>
              <% else %>
                  <p>It looks like you got accepted to the event but didn't RSVP. This means that you won't be able to attend. If you have any questions please email us at <a href="mailto:team@hackumass.com ">team@hackumass.com </a></p>
              <% end %>
          <% else %>
              <p>Thanks for submitting your application! We'll send you an email if you got in.</p>
              <p>Your application status is: <span class="label label-info" style="font-size: 80%"><%= current_user.event_application.application_status.capitalize %></span></p>
          <% end  %>
      <% else %>
          <h1>Hello, <%= current_user.first_name %> </h1>
          <p>Registration is now closed but you can still apply for our waitlist.</p>
          <%= link_to 'Apply for Waitlist', apply_path, data: {turbolinks: false}, class: 'btn btn-warning btn-lg'%>
      <% end %>
    </div>

    <% if current_user.did_rsvp? or current_user.is_admin?%>
        <%= render 'home_actions' %>
    <% else %>
        <div class="panel panel-default">
          <div class="panel-body">
            <center><h6>Welcome to your dashboard! All the features will be unlocked if you get accepted!</h6></center>
          </div>
        </div>
    <% end %>

    <%elsif current_user.is_admin? or current_user.is_organizer? %>
      <!--Organizer Stuff-->
    <div class="jumbotron">
      <h1>Hello, <%= current_user.first_name %></h1>
      <p>You're an organizer and that's fucking awesome! Here's some things we think you might care about.</p>
    </div>

    <div class="row">

      <div class="col-lg-4">
        <div class="panel panel-default">
          <div class="panel-heading">RSVP Count <span class="label label-primary"><%= EventApplication.where(:rsvp => true).count%></span></div>
          <div class="panel-body">
            <%= pie_chart EventApplication.where(:application_status => 'accepted').group(:rsvp).count %>
          </div>
        </div>
      </div>

      <div class="col-lg-4">
        <div class="panel panel-default">
          <div class="panel-heading">Check-In Count <span class="label label-primary"><%= EventApplication.where(:check_in => true).count%></div>
          <div class="panel-body">
            <%= pie_chart EventApplication.where(:application_status => 'accepted').group(:check_in).count %>
          </div>
        </div>
      </div>

      <div class="col-lg-4">
        <div class="panel panel-default">
          <div class="panel-heading">Secret</div>
          <div class="panel-body">
            <h3>There's nothing here yet...</h3>
          </div>
        </div>
      </div>


    </div>


<% end %>


