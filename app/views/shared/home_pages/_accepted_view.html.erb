
<% if @rsvp.errors.any? %>
  <div class="row">
    <div class="col-sm-12 col-lg-12">
      <div class="card">
        <div class="card-status bg-danger"></div>
        <div class="card-header">
          <h3 class="page-title">
              <%=pluralize(@rsvp.errors.count, 'error') %> prohibited your RSVP from being saved:
          </h3>
        </div>
        <div class="card-body event-application-error-card-padding">
          <ul>
            <% @rsvp.errors.values.each do |message| %>
              <li>
                <%= message.to_s.gsub(%r{[\[\]"]}, '').gsub(%r{\\n}, '') %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
<% end %>
