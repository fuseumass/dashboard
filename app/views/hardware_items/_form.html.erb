<div class="col-lg-6">
  <%= form_for(hardware_item) do |f| %>

    <% if hardware_item.errors.any? %>

        <div class="panel panel-danger">
          <div class="panel-heading">
            <h3 class="panel-title"><%= pluralize(hardware_item.errors.count, "error") %> prohibited this hardware item from being saved:</h3>
          </div>
          <div class="panel-body">
            <ul>
              <% hardware_item.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, class:'control-label' %>
      <%= f.text_field :name, class: 'form-control', placeholder: 'Type name of hardware here' %>
    </div>

    <div class="form-group">
      <%= f.label :count, class:'control-label' %>
      <%= f.number_field :count, class: 'form-control', placeholder: 'Type count here'%>
    </div>

    <div class="form-group">
      <%= f.label :link, class:'control-label' %>
      <%= f.text_field :link, class: 'form-control', placeholder: 'Type link here' %>
    </div>

    <div class="form-group">
      <%= f.label :category, class:'control-label' %>
      <%= f.select(:category, ['Microprocessors', 'Microcontrollers', 'Sensors', 'Wearables', 'Quadcopters', 'Other','
                                General','Kits','Building Parts','Soldering Items','Cables','Wires','Motor Drivers','Switches',
                                'Passive Devices', 'Motors','Wheels','Software Defined Radios','Antennas'],
                   {include_blank: "Select a category"}, { :class => 'form-control' }) %>
    </div>

    <div class="form-group">
      <%= f.label :upc, class:'control-label' %>
      <%= f.text_field :upc, class: 'form-control', placeholder: 'Type upc here' %>
    </div>

    <div class="form-group">
      <%= f.label :location, class:'control-label' %>
      <%= f.text_field :location, class: 'form-control', placeholder: 'Type location here' %>
    </div>

    <div class="form-group">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  <% end %>

</div>
