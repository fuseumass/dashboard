<div class='form-group'>
  <legend>HackUMass Applications</legend>
</div>

<%= will_paginate @posts %>

<div class='btn-group btn-group-justified'>
  <%= 
      link_to 'all', 
      {controller: 'event_applications', action: 'index', params:{status: 'all'}}, 
      {class:'btn btn-default'}
  %>
  <%= 
      link_to 'undecided', 
      {controller: 'event_applications', action: 'index', params:{status: 'undecided'}},  
      {class:'btn btn-default'}
  %>
  <%= 
      link_to 'accepted', 
      {controller: 'event_applications', action: 'index', params:{status: 'accepted'}},  
      {class:'btn btn-default'}
  %>
  <%= 
      link_to 'denied', 
      {controller: 'event_applications', action: 'index', params:{status: 'denied'}},  
      {class:'btn btn-default'}
  %>
  <%= 
      link_to 'waitlisted', 
      {controller: 'event_applications', action: 'index', params:{status: 'waitlisted'}},  
      {class:'btn btn-default'}
  %>
</div><br>
  
<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th class='table-header'>User ID</th>
      <th class='table-header'>Application Status</th>
      <th class='table-header'>Name</th>
      <th class='table-header'>University</th>
      <th class='table-header'>Major</th>
      <th class='table-header'>Graduation Year</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |form| %>
      <% show_form = event_application_path(form) %>
      <% if form.application_status == 'undecided'%>
        <tr class='table-row active'>
      <% elsif form.application_status == 'accepted' %>
        <tr class='table-row success'>
      <% elsif form.application_status == 'denied' %>
        <tr class='table-row danger'>
      <% else form.application_status == 'waitlisted' %>
        <tr class='table-row warning'>
      <% end %>

        <td> 
          <a class='table-link' href='<%= show_form %>'>
            <%= form.user_id %>
          </a>
        </td>
        <td> 
          <a class='table-link' href='<%= show_form %>'>
            <%= form.application_status.capitalize %>
          </a>
        </td>
        <td> 
          <a class='table-link' href='<%= show_form %>'>
            <%= form.name %>
          </a>
        </td>
        <td> 
          <a class='table-link' href='<%= show_form %>'>
            <%= form.university %>
          </a>
        </td>
        <td> 
          <a class='table-link' href='<%= show_form %>'>
            <%= form.major %>
          </a>
        </td>
        <td> 
          <a class='table-link' href='<%= show_form %>'>
            <%= form.grad_year %>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table> 