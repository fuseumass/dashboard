<div class="row">
  <div class="col-sm-6 col-lg-3">
    <div class="card p-3">
      <div class="d-flex align-items-center">
        <span class="stamp stamp-md bg-purple mr-3">
          <i class="fe fe-calendar"></i>
        </span>
        <div>
          <h4 class="m-0"><%= @event_count %></h4>
          <small class="text-muted">Listed Events</small>
        </div>
      </div>
    </div>
  </div>
  <div class="col-sm-6 col-lg-3">
    <div class="card p-3">
      <div class="d-flex align-items-center">
        <span class="stamp stamp-md bg-teal mr-3">
          <i class="fe fe-box"></i>
        </span>
        <div>
          <h4 class="m-0"><%= @prize_count %></h4>
          <small class="text-muted">Listed Prizes</small>
        </div>
      </div>
    </div>
  </div>
  <div class="col-sm-6 col-lg-3">
    <div class="card p-3">
      <div class="d-flex align-items-center">
        <span class="stamp stamp-md bg-yellow mr-3">
          <i class="fe fe-cpu"></i>
        </span>
        <div>
          <h4 class="m-0"><%= @hardware_count %></h4>
          <small class="text-muted">Hardware Items</small>
        </div>
      </div>
    </div>
  </div>
  <div class="col-sm-6 col-lg-3">
    <div class="card p-3">
      <div class="d-flex align-items-center">
        <span class="stamp stamp-md bg-blue mr-3">
          <i class="fe fe-inbox"></i>
        </span>
        <div>
          <h4 class="m-0"><%= @project_count %></h4>
          <small class="text-muted">Listed Projects</small>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row row-cards">
  <div class="col-6 col-sm-4 col-lg-2">
    <div class="card">
      <div class="card-body p-3 text-center">
        <br>
        <div class="h1 m-0"><%= @all_apps_count%></div>
        <div class="text-muted mb-4">Total Applications</div>
      </div>
    </div>
  </div>
  <div class="col-6 col-sm-4 col-lg-2">
    <div class="card">
      <div class="card-body p-3 text-center">
        <br>
        <div class="h1 m-0"><%= @undecided_count%></div>
        <div class="text-muted mb-4">Undecided</div>
      </div>
    </div>
  </div>
  <div class="col-6 col-sm-4 col-lg-2">
    <div class="card">
      <div class="card-body p-3 text-center">
        <br>
        <div class="h1 m-0"><%= @waitlisted_count%></div>
        <div class="text-muted mb-4">Waitlisted</div>
      </div>
    </div>
  </div>
  <div class="col-6 col-sm-4 col-lg-2">
    <div class="card">
      <div class="card-body p-3 text-center">
        <br>
        <div class="h1 m-0"><%= @accepted_count %></div>
        <div class="text-muted mb-4">Accepted</div>
      </div>
    </div>
  </div>
  <div class="col-6 col-sm-4 col-lg-2">
    <div class="card">
      <div class="card-body p-3 text-center">
        <br>
        <div class="h1 m-0"><%= @denied_count %></div>
        <div class="text-muted mb-4">Denied</div>
      </div>
    </div>
  </div>
  <div class="col-6 col-sm-4 col-lg-2">
    <div class="card">
      <div class="card-body p-3 text-center">
        <br>
        <div class="h1 m-0"><%= @flagged_count %></div>
        <div class="text-muted mb-4">Flagged</div>
      </div>
    </div>
  </div>
</div>
