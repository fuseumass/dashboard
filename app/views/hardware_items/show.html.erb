<%= link_to 'Back', hardware_items_path, class: 'btn btn-default', style: 'color: #2196F3' %>


<br>
<br>

<div class="row">
  <div class="col-lg-6">
    <div class="panel panel-default">
      <div class="panel-body">
        <p>
          <strong>Name:</strong>
          <%= @hardware_item.name %>
        </p>

        <p>
          <strong>Count:</strong>
          <%= @hardware_item.count %>
        </p>

        <p>
          <strong>Link:</strong>
          <% if @hardware_item.link.nil? or @hardware_item.link.empty?%>
            No Link Available
        <% else %>
            <%= link_to @hardware_item.link, @hardware_item.link, target: :_blank %>
        <% end %>
        </p>

        <p>
          <strong>Category:</strong>
          <%= @hardware_item.category %>
        </p>

        <% if current_user.is_admin? or current_user.is_organizer? %>
            <%= link_to 'Edit', edit_hardware_item_path(@hardware_item), class: 'btn btn-warning' %>
        <% end %>

        <% if current_user.is_admin?%>
            <%= link_to 'Delete', hardware_item_path(@hardware_item), :method => :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this item?' } %>
            <%= link_to 'Download CSV', hardware_item_path(@hardware_item, format: 'csv'), class: 'btn btn-default' %>
        <% end %>

        </div>
      </div>
    </div>

    <div class="col-lg-6">
      <div class="panel panel-default">
        <div class="panel-heading">Barcode</div>
        <div class="panel-body">
          <%= render 'barcode' %>
        </div>
      </div>
    </div>
</div>

<div class="row">

  <div class="col-lg-6">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">This Item has been checked out to</h3>
        </div>
        <div class="panel-body">
          <%= render 'checked_out_items'%>
        </div>
      </div>
  </div>

  <div class="col-lg-6">
    <div class="panel panel-warning">
      <div class="panel-heading">
        <h3 class="panel-title">Checkout this Item</h3>
      </div>
      <div class="panel-body">
        <%= render 'checkout' %>
      </div>
    </div>
  </div>

</div>







