<div class="row">
  <div class="col-sm-6 col-lg-3">
    <div class="card p-3">
      <div class="d-flex align-items-center">
        <span class="stamp stamp-md bg-red mr-3">
          <i class="fe fe-dollar-sign"></i>
        </span>
        <div>
          <h4 class="m-0">0</h4>
          <small class="text-muted">Pending Reimbursements</small>
        </div>
      </div>
    </div>
  </div>
  <div class="col-sm-6 col-lg-3">
    <div class="card p-3">
      <div class="d-flex align-items-center">
        <span class="stamp stamp-md bg-green mr-3">
          <i class="fe fe-dollar-sign"></i>
        </span>
        <div>
          <h4 class="m-0">0</h4>
          <small class="text-muted">Approved Reimbursements</small>
        </div>
      </div>
    </div>
  </div>
  <div class="col-sm-6 col-lg-3">
    <div class="card p-3">
      <div class="d-flex align-items-center">
        <span class="stamp stamp-md bg-yellow mr-3">
          <i class="fe fe-cpu"></i>
        </span>
        <div>
          <h4 class="m-0"><%= @hardware_count %></h4>
          <small class="text-muted">Hardware Items</small>
        </div>
      </div>
    </div>
  </div>
  <div class="col-sm-6 col-lg-3">
    <div class="card p-3">
      <div class="d-flex align-items-center">
        <span class="stamp stamp-md bg-blue mr-3">
          <i class="fe fe-users"></i>
        </span>
        <div>
          <h4 class="m-0"><%= @user_count %></h4>
          <small class="text-muted">Registered Users</small>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row row-cards">
  <div class="col-6 col-sm-4 col-lg-2">
    <div class="card">
      <div class="card-body p-3 text-center">
        <br>
        <div class="h1 m-0"><%= @all_apps_count%></div>
        <div class="text-muted mb-4">Total Applications</div>
      </div>
    </div>
  </div>
  <div class="col-6 col-sm-4 col-lg-2">
    <div class="card">
      <div class="card-body p-3 text-center">
        <br>
        <div class="h1 m-0"><%= @undecided_count%></div>
        <div class="text-muted mb-4">Undecided</div>
      </div>
    </div>
  </div>
  <div class="col-6 col-sm-4 col-lg-2">
    <div class="card">
      <div class="card-body p-3 text-center">
        <br>
        <div class="h1 m-0"><%= @waitlisted_count%></div>
        <div class="text-muted mb-4">Waitlisted</div>
      </div>
    </div>
  </div>
  <div class="col-6 col-sm-4 col-lg-2">
    <div class="card">
      <div class="card-body p-3 text-center">
        <br>
        <div class="h1 m-0"><%= @accepted_count %></div>
        <div class="text-muted mb-4">Accepted</div>
      </div>
    </div>
  </div>
  <div class="col-6 col-sm-4 col-lg-2">
    <div class="card">
      <div class="card-body p-3 text-center">
        <br>
        <div class="h1 m-0"><%= @denied_count %></div>
        <div class="text-muted mb-4">Denied</div>
      </div>
    </div>
  </div>
  <div class="col-6 col-sm-4 col-lg-2">
    <div class="card">
      <div class="card-body p-3 text-center">
        <br>
        <div class="h1 m-0"><%= @flagged_count %></div>
        <div class="text-muted mb-4">Flagged</div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-6">
    <div class="card">
      <div class="card-body d-flex flex-column">
        <center><h4>Users Signups <span class="badge badge-primary"><%= User.where("created_at >= ?", Time.parse("2018-08-17 13:30:00 UTC")).count %></span></h4></center>
        <%= line_chart User.where("created_at >= ?", Time.parse("2018-08-17 13:30:00 UTC")).group_by_day(:created_at).count %>
      </div>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="card">
      <div class="card-body d-flex flex-column">
        <center><h4>Applications Submitted <span class="badge badge-primary"><%= EventApplication.all.count %></span></h4></center>
        <%= line_chart EventApplication.all.group_by_day(:created_at).count %>
      </div>
    </div>
  </div>
</div>
