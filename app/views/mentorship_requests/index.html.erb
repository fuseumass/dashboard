<h1>Mentorship Dashboard</h1>

<table class="table table-striped table-hover ">

  <thead>
  <tr>
    <% if current_user.is_organizer? or current_user.is_admin? %>
        <th>UPC</th>
    <% end %>
    <th>Title</th>
    <th>Help Type</th>
    <th>Urgency</th>
    <th>Status</th>
  </tr>
  </thead>

  <tbody>
  <% @mentorship_requests.each do |request| %><a href=""></a>
      <tr>

        <td><%= link_to request.title, request %></td>
        <td><%= request.help_type %></td>
        <td><%= request.urgency %></td>
        <td><%= request.status %></td>

      </tr>
  <% end %>
  </tbody>
</table>

<br>

