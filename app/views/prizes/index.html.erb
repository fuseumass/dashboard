<p id="notice"><%= notice %></p>

<h1>Prizes</h1>

<div class="row">
  <% @prizes.in_groups_of(3, false).each do |group| %>
    <% group.each do |prize| %>
      <div class="col-lg-4">
        <div class="card">
              <% if prize.priority == 1 %>
                <div class="card-status bg-purple"></div>
              <% end %>
              <div class="card-header">
                <h3 class="card-title"> <%= prize.name %> </h3>
              </div>
              <div class="card-body">
                <p> <b> Criteria: </b> <%= prize.criteria %> </p>
                <p> <b> Description: </b> <%= prize.description %> </p>
                <p> <b> Sponsored by: </b> <%= prize.sponsor %> </p>
              </div>
          </div>
      </div>
    <% end %>
  <% end %>
</div>


<br>
<% if current_user.is_admin? or current_user.is_organizer? %>
  <%= link_to 'New Prize', new_prize_path, class: 'btn btn-secondary' %>
<% end %>
